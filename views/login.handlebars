<h2 class="orange-text">Login to your account!</h2>
<form class="login-form">
  <div>
    <label for="email-login">Email:</label>
    <input type="text" id="email-login" />
  </div>
  <div>
    <label for="password-login">Password:</label>
    <input type="password" id="password-login" />
  </div>
  <div>
    <button class="btn light-blue"type="submit">Login</button>
  </div>
</form>

<h2 class="orange-text">Don't have an account? Sign-up below!</h2>
<form class="signup-form">
  <div>
    <label for="firstname-signup">First Name:</label>
    <input type="text" id="firstname-signup" />
  </div>
    <div>
    <label for="lastname-signup">Last Name:</label>
    <input type="text" id="lastname-signup" />
  </div>
  <div>
    <label for="email-signup">Email:</label>
    <input type="text" id="email-signup" />
  </div>
  <div>
    <label for="password-signup">Password:</label>
    <input type="password" id="password-signup" />
  </div>
  <div>
    <button class="btn light-blue" type="submit">Sign Up</button>
  </div>
</form>
<script src="/javascript/login.js"></script>
<script src="/javascript/sign-up.js"></script>